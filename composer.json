{
  "name": "contributte/deployer-extension",
  "description": "Ftp-Deployment Extension for Nette",
  "type": "library",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/contributte/deployer-extension",
  "authors": [
    {
      "name": "Milan Felix Å ulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">=7.2",
    "nette/di": "~2.4.13",
    "dg/ftp-deployment": "~3.3.0"
  },
  "require-dev": {
    "ninjify/qa": "^0.10.0",
    "ninjify/nunjuck": "^0.3.0",
    "mockery/mockery": "^1.3.0",
    "phpstan/phpstan": "^0.12.0",
    "phpstan/phpstan-deprecation-rules": "^0.12.0",
    "phpstan/phpstan-nette": "^0.12.0",
    "phpstan/phpstan-strict-rules": "^0.12.0"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Deployer\\": "src"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "qa": [
      "codesniffer src tests"
    ],
    "tests": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "coverage": [
      "tester -s -p phpdbg --colors 1 -C --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ],
    "phpstan": [
      "phpstan analyse -l max -c phpstan.neon src"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.1-dev"
    }
  }
}
